# Run Postgres DB
##-v /mnt/C/Users/Bond/Documents/Projetos/vibe3d-app-from-git/backend/database_data:/var/lib/postgresql/data:Z
podman run -d --name postgres -e POSTGRES_DB=vibe3d -e POSTGRES_PASSWORD=vibe3dPass -e POSTGRES_USER=vibe3dUser -e PGDATA=/var/lib/postgresql/data/pgdata --network vibe3d-network -p 5432:5432 postgres:15.6
